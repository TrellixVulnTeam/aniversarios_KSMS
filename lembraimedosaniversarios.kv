ScreenManager:
    Main:
        name:'Principal'

<MyPopup@MDDialog>:
    id: mypop
    name:"MyPopup"
    auto_dismiss: False
    Button:
        text: 'Close me!'
        on_release: root.dismiss()

<Main>:
    on_enter: root.printar_label()
    GridLayout:
        rows: 3
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            canvas.before:
                Color:
                    rgba:(1,1,0,0.30)
                Rectangle:
                    size: self.size
                    pos: self.pos
            MDLabel:
                id:aniversariododia
                font_size:'50sp'
                halign:'center'
                theme_text_color: 'Custom'
                text_color:(0.5,0,0.89, 0.8)

        AnchorLayout:
            padding:10
            size_hint_y:None
            anchor_x: 'center'
            anchor_y: 'bottom'
            canvas.before:
                Color:
                    rgba:(0.65,0.35,0,0.7)
                Rectangle:
                    size: self.size
                    pos: self.pos
            MDTextButton:
                id: sair
                text: 'Sair'
                font_size:'38sp'
                halign:'center'
                valign:'center'
                on_press: app.stop()